@model Hotel_Reservations_Manager.Models.Room

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoomNumber" />
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomType" class="control-label"></label>
                <select asp-for="RoomType" class="form-control">
                    <option value="Two_Single_Beds">Two Single Beds</option>
                    <option value="Apartment">Apartment</option>
                    <option value="Double_Bed">Double Bed</option>
                    <option value="Penthouse">Penthouse</option>
                    <option value="Maissonette">Maissonette</option>
                </select>
                <span asp-validation-for="RoomType" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="AdultPrice" class="control-label"></label>
                <input asp-for="AdultPrice" class="form-control" />
                <span asp-validation-for="AdultPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChildPrice" class="control-label"></label>
                <input asp-for="ChildPrice" class="form-control" />
                <span asp-validation-for="ChildPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
